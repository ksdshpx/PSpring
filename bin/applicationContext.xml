<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 配置bean 配置方式：基于xml的方式,使用全类名的方式. <bean>:受Spring管理的一个javaBean对象. id:<bean>的唯一标识.在整个的IOC容器中唯一不重复. 
		class:指定javaBean的全类名.目的是通过反射创建对象. Class clazz = Class.forName("cn.ksdshpx.spring.domain.Person"); 
		Object obj = clazz.newInstance();//必须提供无参数的构造器 <property>:给对象的属性赋值 name:指定属性名,指定setter风格的属性名 
		value:指定属性值 -->
	<bean id="person" class="cn.ksdshpx.spring.domain.Person">
		<property name="name" value="Spring"></property>
	</bean>

	<!-- DI依赖注入的方式:setter方法注入 -->
	<bean id="car" class="cn.ksdshpx.spring.domain.Car">
		<property name="brand" value="奥迪"></property>
		<property name="crop" value="一汽"></property>
		<property name="price" value="400000"></property>
	</bean>

	<!-- 
		DI依赖注入的方式:构造器方法注入
		index:指定参数位置
		type:指定参数类型
	-->
	<bean id="car2" class="cn.ksdshpx.spring.domain.Car">
		<constructor-arg value="宝马"></constructor-arg>
		<constructor-arg value="华晨"></constructor-arg>
		<constructor-arg value="500000" type="java.lang.Double"></constructor-arg>
	</bean>
<!--<bean id="car2" class="cn.ksdshpx.spring.domain.Car">
		<constructor-arg value="宝马" index="0"></constructor-arg>
		<constructor-arg value="500000" index="2"></constructor-arg>
		<constructor-arg value="华晨" index="1"></constructor-arg>
	</bean> -->
	
	<bean id="car3" class="cn.ksdshpx.spring.domain.Car">
		<constructor-arg value="奔驰" ></constructor-arg>
		<constructor-arg value="梅赛德斯"></constructor-arg>
		<constructor-arg value="300"></constructor-arg>
	</bean>
</beans>
